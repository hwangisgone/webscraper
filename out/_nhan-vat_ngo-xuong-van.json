gô Quyền<\/a><\/td>\n  <\/tr>\n  <tr>\n   <th scope=\"row\">Thân mẫu<\/th>\n   <td>Dương hậu<\/td>\n  <\/tr>\n  <tr>\n   <th scope=\"row\">Mất<\/th>\n   <td>965<\/td>\n  <\/tr>\n <\/tbody>\n<\/table>"],
